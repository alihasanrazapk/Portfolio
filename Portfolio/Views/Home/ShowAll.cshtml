@model IEnumerable<ContactForm>

@{
    ViewData["Title"] = "ShowAll";
}

<div class="container-fluid mt-5">
  
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-10 text-center">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @item.Message
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit  text-warning"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-list  "></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt  text-danger"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

